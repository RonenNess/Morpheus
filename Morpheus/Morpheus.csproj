<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Morpheus</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Ronen Ness</Copyright>
    <RepositoryUrl>https://github.com/RonenNess/Morpheus</RepositoryUrl>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageTags>animations;graphics;animate;games</PackageTags>
    <Authors>RonenNess</Authors>
    <Description>A versatile, fluent API for crafting smooth and dynamic animations in C#.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
